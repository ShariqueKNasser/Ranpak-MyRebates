<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:ui="sap.ui.unified"
    xmlns:table="sap.ui.table"
    xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <Dialog
        id="idBlkRbtClmDlg"
        title="{i18n>BLK_RBT_CLM}"
        class="sapUiContentPadding"
        stretch="true"
    >
        <content>
            <Wizard
                id="idBlkRbtClmWiz"
                showNextButton="false"
            >
                <WizardStep
                    id="idDwnldTmpltWizStp"
                    icon="sap-icon://download"
                    title="{i18n>DOWNLOAD_TEMPLATE}"
                    validated="true"
                >
                    <HBox
                        alignItems="Center"
                        justifyContent="Center"
                    >
                        <Button
                            text="{i18n>DOWNLOAD_TEMPLATE_BTN}"
                            type="Emphasized"
                            press="onDwnldTemplt"
                        />
                    </HBox>
                </WizardStep>
                <WizardStep
                    id="idUpldTmpltWizStp"
                    icon="sap-icon://upload"
                    title="{i18n>UPLOAD_TEMPLATE}"
                    validated="true"
                >
                    <HBox
                        alignItems="Center"
                        justifyContent="Center"
                    >
                        <ui:FileUploader
                            buttonOnly="true"
                            buttonText="{i18n>UPLOAD_TEMPLATE_BTN}"
                            style="Emphasized"
                            change="onUpldTemplt"
                            sameFilenameAllowed="true"
                        />
                    </HBox>
                </WizardStep>
                <WizardStep
                    id="idReviewWizStp"
                    icon="sap-icon://request"
                    title="{i18n>REVIEW_UPLD_INFO}"
                    validated="true"
                >
                    <table:Table
                        id="idBlkUpldTbl"
                        selectionMode="None"
                        visibleRowCount="10"
                    />
                </WizardStep>
                <WizardStep
                    id="idAttachUpldWizStp"
                    icon="sap-icon://add-document"
                    title="{i18n>UPLOAD_ATTACHMENTS}"
                    validated="true"
                >
                    <VBox>
                        <items>
                            <HBox
                                alignItems="End"
                                justifyContent="End"
                            >
                                <Text
                                    text="{i18n>ATTACHMENT_UPLD_DESC}"
                                    class="infoFontCls"
                                />
                            </HBox>
                            <ui:FileUploader
                                buttonOnly="true"
                                buttonText="{i18n>UPLOAD_DOC}"
                                sameFilenameAllowed="true"
                                tooltip="{i18n>UPLOAD_DOC}"
                                change="onAttachmentUpload"
                                style="Emphasized"
                                multiple="true"
                                icon="sap-icon://upload"
                            />
                            <Table
                                items="{oAttachmentMdl>/results}"
                                class="sapUiSmallMarginTop"
                            >
                                <columns>
                                    <Column>
                                        <Text text="{i18n>FILE_NAME}" />
                                    </Column>
                                    <Column>
                                        <Text text="{i18n>FILE_TYPE}" />
                                    </Column>
                                    <Column>
                                        <Text text="{i18n>FILE_SIZE}" />
                                    </Column>
                                    <Column />
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <Text
                                                text="{oAttachmentMdl>fileName}"
                                            />
                                            <Text
                                                text="{oAttachmentMdl>fileType}"
                                            />
                                            <Text
                                                text="{oAttachmentMdl>fileSize}"
                                            />
                                            <Button
                                                type="Transparent"
                                                icon="sap-icon://delete"
                                                press="onAttachmentDel"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </items>
                    </VBox>
                </WizardStep>
            </Wizard>
        </content>
        <beginButton>
            <Button
                text="{i18n>CANCEL}"
                press="onBlkCncl"
            />
        </beginButton>
        <endButton>
            <Button
                id="idBlkSubmitBtn"
                text="{i18n>SUBMIT_CLAIM}"
                press="onBlkSubmit"
                type="Emphasized"
                enabled="false"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
