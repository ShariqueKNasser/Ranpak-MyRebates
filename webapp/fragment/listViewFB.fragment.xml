<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <smartFilterBar:SmartFilterBar
        id="idMyRebatesFB"
        entitySet="ZC_MyRebates"
        smartVariant="idMyRebatesVariant"
        enableBasicSearch="false"
        persistencyKey="MyRebates_SFB"
        showClearOnFB="true"
        clear="onFilterClear"
        liveMode="false"
        afterVariantLoad="onVariantLoad"
        beforeVariantFetch="onBeforeVariantFetch"
    >
        <smartFilterBar:controlConfiguration>
            <smartFilterBar:ControlConfiguration
                index="0"
                groupId="_BASIC"
                key="RebateID"
                visibleInAdvancedArea="true"
                label="{i18n>columnRebateID}"
            >
                <smartFilterBar:customControl>
                    <MultiInput
                        id="inputRebateID"
                        type="Number"
                        showValueHelp="false"
                    />
                </smartFilterBar:customControl>
            </smartFilterBar:ControlConfiguration>
            <smartFilterBar:ControlConfiguration
                index="1"
                groupId="_BASIC"
                key="ValidTo"
                visibleInAdvancedArea="true"
                label="{i18n>columnValidTo}"
            >
                <smartFilterBar:customControl>
                    <DateRangeSelection
                        id="inputValidTo"
                        tooltip="{i18n>tooltipValidToFilter}"
                        displayFormat="MMM-yy"
                    />
                </smartFilterBar:customControl>
            </smartFilterBar:ControlConfiguration>
            <smartFilterBar:ControlConfiguration
                index="2"
                groupId="_BASIC"
                key="CustomerID"
                visibleInAdvancedArea="true"
                label="{i18n>columnCustomer}"
            >
                <smartFilterBar:customControl>
                    <MultiComboBox
                        showSecondaryValues="true"
                        id="inputDistributors"
                        items="{path : '/ZC_MyRebatesCustomers',length : '1000'}"
                    >
                        <items>
                            <core:ListItem
                                key="{CustomerID}"
                                text="{CustomerDescription}"
                                additionalText="{CustomerID}"
                            />
                        </items>
                    </MultiComboBox>
                </smartFilterBar:customControl>
            </smartFilterBar:ControlConfiguration>
            <smartFilterBar:ControlConfiguration
                index="3"
                groupId="_BASIC"
                key="EndUserID"
                visibleInAdvancedArea="true"
                label="{i18n>columnEndUser}"
            >
                <smartFilterBar:customControl>
                    <MultiComboBox
                        id="inputEndUser"
                        showSecondaryValues="true"
                        items="{path : '/ZC_MyRebatesEndUsers',length : '1000'}"
                    >
                        <items>
                            <core:ListItem
                                key="{EndUserID}"
                                text="{EndUserDescription}"
                                additionalText="{EndUserID}"
                            />
                        </items>
                    </MultiComboBox>
                </smartFilterBar:customControl>
            </smartFilterBar:ControlConfiguration>
            <smartFilterBar:ControlConfiguration
                index="4"
                groupId="_BASIC"
                key="MaterialID"
                visibleInAdvancedArea="true"
                label="{i18n>columnMaterial}"
            >
                <smartFilterBar:customControl>
                    <MultiComboBox
                        id="inputMaterial"
                        showSecondaryValues="true"
                        items="{path : '/ZC_Materials'}"
                    >
                        <items>
                            <core:ListItem
                                key="{MaterialID}"
                                text="{MaterialDescription}"
                                additionalText="{MaterialID}"
                            />
                        </items>
                    </MultiComboBox>
                </smartFilterBar:customControl>
            </smartFilterBar:ControlConfiguration>
            <smartFilterBar:ControlConfiguration
                index="5"
                groupId="_BASIC"
                key="Status"
                visibleInAdvancedArea="true"
                label="{i18n>columnStatus}"
            >
                <smartFilterBar:customControl>
                    <Select
                        id="inputStatus"
                        forceSelection="false"
                    >
                        <core:Item
                            key=""
                            text=""
                        />
                        <core:Item
                            key="{i18n>filterStatusActive}"
                            text="{i18n>filterStatusActive}"
                        />
                        <core:Item
                            key="{i18n>filterStatusExpired}"
                            text="{i18n>filterStatusExpired}"
                        />
                    </Select>
                </smartFilterBar:customControl>
            </smartFilterBar:ControlConfiguration>
        </smartFilterBar:controlConfiguration>
    </smartFilterBar:SmartFilterBar>
</core:FragmentDefinition>
